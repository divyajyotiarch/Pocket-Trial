<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/private_key_title"
        android:layout_width="167dp"
        android:layout_height="41dp"
        android:text="Enter Private Key"
        android:textSize="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.184"></TextView>

    <EditText
        android:id="@+id/private_key_text"
        android:layout_width="277dp"
        android:layout_height="107dp"
        android:lines="10"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.314">

    </EditText>

    <Button
        android:id="@+id/import_wallet_btn"
        android:layout_width="194dp"
        android:layout_height="73dp"
        android:backgroundTint="#AAD"
        android:text="Import Wallet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/private_key_text"
        app:layout_constraintVertical_bias="0.286"></Button>

    <Button
        android:id="@+id/create_wallet_btn"
        android:layout_width="184dp"
        android:layout_height="73dp"
        android:backgroundTint="#AAD"
        android:text="Create Wallet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/import_wallet_btn"
        app:layout_constraintVertical_bias="0.352">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>
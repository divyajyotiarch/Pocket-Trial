<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateWalletActivity">

    <TextView
        android:id="@+id/public_key_text"
        android:layout_width="234dp"
        android:layout_height="91dp"
        android:text="Public Key"
        android:textIsSelectable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.167"></TextView>

    <TextView
        android:id="@+id/private_key_text"
        android:layout_width="243dp"
        android:layout_height="114dp"
        android:textIsSelectable="true"
        android:text="Private Key"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/public_key_text"
        app:layout_constraintVertical_bias="0.136">

    </TextView>

    <Button
        android:id="@+id/generate_wallet_btn"
        android:layout_width="193dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:text="Create Wallet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/private_key_text"
        app:layout_constraintVertical_bias="0.283"></Button>

    <Button
        android:id="@+id/continue_btn"
        android:layout_width="169dp"
        android:layout_height="57dp"
        android:text="Continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generate_wallet_btn"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>